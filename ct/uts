void split() {
	 FILE * student;
	 FILE * pisah;

	 struct {
	 		char nama[15];
			char umur[3];
			char kelas[3];
	 }data;

	 student = fopen("student.txt", "r");

	 do {
	 	 fscanf(student, "%s %s %s", &data.nama, &data.umur, &data.kelas);
	 	 pisah = fopen(data.kelas, "a");
	 	 fprintf(pisah, "%s %s %s\n", data.nama, data.umur, data.kelas);
	 }
	 while(!feof(student));
}

